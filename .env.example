# Example Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
MONGO_USER_PORT=27017
MONGO_PRODUCT_PORT=27018
MONGO_ORDER_PORT=27019

# Service Ports
USER_SERVICE_PORT=3001
PRODUCT_SERVICE_PORT=3002
ORDER_SERVICE_PORT=3003

# Database URIs (for Docker internal communication)
USER_DB_URI=mongodb://mongo-user:27017/userdb
PRODUCT_DB_URI=mongodb://mongo-product:27017/productdb
ORDER_DB_URI=mongodb://mongo-order:27017/orderdb

# JWT Secret (CHANGE THIS IN PRODUCTION!)
# Generate a secure random string for production use
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-12345678

# Service URLs (for internal communication)
PRODUCT_SERVICE_URL=http://product-service:3002
USER_SERVICE_URL=http://user-service:3001
ORDER_SERVICE_URL=http://order-service:3003
